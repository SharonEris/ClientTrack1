@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ClientTrack.DBL.Models.ClientModel

<div class="container mt-4">
    <h2 class="mb-4">Manage Client</h2>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <table class="table table-bordered">
                <tr>
                    <th>Client Name</th>
                    <td>@Model.ClientName</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@Model.Phone</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>@Model.CountryName</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>@Model.StatusName</td>
                </tr>
            </table>

            <div class="d-flex gap-2">
                <a asp-action="EditClient" asp-route-clientId="@Model.ClientId" class="btn btn-primary">Edit</a>
                <a asp-action="DisableClient" asp-route-clientId="@Model.ClientId" class="btn btn-danger">Disable</a>
                <a asp-action="ListClient" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
